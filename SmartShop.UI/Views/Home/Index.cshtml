@model List<SmartShop.UI.Controllers.Recipe>
@{
    ViewData["Title"] = "Home Page";
}

<head>
   <style>
        .dot {
            height: 25px;
            width: 25px;
            background-color: #bbb;
            border-radius: 50%;
            display: inline-block;
        }
        
        .card {
            height: auto;
            width: 600px;
        }
        .card_img {
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center center;
        }
   </style>
</head>
<p>
    <br /><br />
</p>
<div class="text-center">
    <h1 class="display-4" style="font-family: Impact;">Welcome To SmartShop</h1>
    <p>
        <br />
    </p>

    <div>
        <a href="@Url.Action( "Suggestion", "Recipe")" type="button" class="btn btn-outline-primary btn-lg">Show Recpie Example</a>
    </div>

    <!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Modal title</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
                            <table class="table table-striped table-hover table-sm">
                      <thead>
                          <tr>
                                <th>Name</th>
                                <th>Description</th>
                          </tr>
                    </thead>
                  <tbody>
                            @foreach (var item in Model)
                            {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Description</td>
                        </tr>
                            }
            </tbody>
        </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>



</div>

<div style="position: relative; top: 150px;">
    <div class="row">
        <div class="col">
            <div class="card">
                <img class="card_img" src="https://media.istockphoto.com/id/1316145932/photo/table-top-view-of-spicy-food.jpg?s=612x612&w=0&k=20&c=eaKRSIAoRGHMibSfahMyQS6iFADyVy1pnPdy1O5rZ98=" />
            </div>
        </div>
        <div class="col">
            <div class="card">
                <img ckass="card_img" src="https://thumbs.dreamstime.com/b/assorted-indian-recipes-food-various-spices-rice-wooden-table-92742528.jpg" />
            </div>
        </div>
    </div>
</div>
